<%- include('partials/header') %>

<main class="container py-5 text-center">
  <h1 class="fw-bold mb-4">Welcome to Workout Tracker</h1>
  <p class="lead mb-4">
    Track your workouts, stay consistent, and reach your goals.
  </p>

  <a href="/workouts" class="btn btn-primary btn-lg">View Workouts</a>

  <% if (!user) { %>
    <a href="/auth/google" class="btn btn-dark btn-lg ms-3">
      Login to Add Workout
    </a>
  <% } else { %>
    <a href="/workouts/new" class="btn btn-success btn-lg ms-3">
      + Add Workout
    </a>
  <% } %>
</main>

<%- include('partials/footer') %>
