<%- include('partials/header') %>

<main class="container py-5" style="max-width: 700px;">
  <div class="text-center mb-4">
    <h2 class="fw-bold">Contact Me</h2>
    <p class="text-muted">
      Don’t miss to contact me for more information — kindly fill the form below.
    </p>
  </div>

  <% if (sent) { %>
  <div class="alert alert-success text-center">
    ✔ Thank you! Your message has been sent.
  </div>
  <% } %>

  <% if (error) { %>
  <div class="alert alert-danger text-center">
    ⚠ <%= error %>
  </div>
  <% } %>

  <form action="/contact" method="POST">
    <div class="mb-3">
      <input 
        type="text" 
        name="name" 
        class="form-control form-control-lg" 
        placeholder="First & Last Name"
        required
      >
    </div>

    <div class="mb-3">
      <input 
        type="email"
        name="email"
        class="form-control form-control-lg"
        placeholder="Your Email"
        required
      >
    </div>

    <div class="mb-3">
      <textarea
        name="message"
        rows="4"
        class="form-control form-control-lg"
        placeholder="Your Message"
        required></textarea>
    </div>

    <button class="btn btn-primary btn-lg w-100">SEND</button>
  </form>
</main>

<%- include('partials/footer') %>
