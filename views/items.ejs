<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Items List</title>
  <link rel="stylesheet" href="/css/style.css"> <!-- Link to the CSS file -->
</head>
<body>
  <!-- Header -->
  <header>
    <h1>Items List</h1>
  </header>

  <!-- Items List -->
  <div class="container">
    <ul>
      <% items.forEach(item => { %>
        <li>
          <h3><%= item.name %></h3>
          <p><%= item.description %></p>
          <a href="/edit/<%= item._id %>">Edit</a>
          <a href="/delete/<%= item._id %>">Delete</a>
        </li>
      <% }) %>
    </ul>
  </div>

  <!-- Footer -->
