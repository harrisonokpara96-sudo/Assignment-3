<%- include('../partials/header') %>

<h1 class="h3 mb-3">Edit Workout</h1>

<form action="/workouts/<%= workout._id %>?_method=PUT" method="POST" class="card p-3 shadow-sm">
  <div class="mb-3">
    <label for="title" class="form-label">Workout Title</label>
    <input
      type="text"
      id="title"
      name="title"
      class="form-control"
      value="<%= workout.title %>"
      required>
  </div>

  <div class="mb-3">
    <label for="type" class="form-label">Type</label>
    <select id="type" name="type" class="form-select" required>
      <option value="Cardio" <%= workout.type === 'Cardio' ? 'selected' : '' %>>Cardio</option>
      <option value="Strength" <%= workout.type === 'Strength' ? 'selected' : '' %>>Strength</option>
      <option value="Flexibility" <%= workout.type === 'Flexibility' ? 'selected' : '' %>>Flexibility</option>
      <option value="Other" <%= workout.type === 'Other' ? 'selected' : '' %>>Other</option>
    </select>
  </div>

  <div class="mb-3">
    <label for="duration" class="form-label">Duration (minutes)</label>
    <input
      type="number"
      id="duration"
      name="duration"
      class="form-control"
      min="1"
      value="<%= workout.duration %>"
      required>
  </div>

  <div class="mb-3">
    <label for="intensity" class="form-label">Intensity</label>
    <select id="intensity" name="intensity" class="form-select">
      <option value="Low" <%= workout.intensity === 'Low' ? 'selected' : '' %>>Low</option>
      <option value="Medium" <%= workout.intensity === 'Medium' ? 'selected' : '' %>>Medium</option>
      <option value="High" <%= workout.intensity === 'High' ? 'selected' : '' %>>High</option>
    </select>
  </div>

  <div class="mb-3">
    <label for="notes" class="form-label">Notes</label>
    <textarea id="notes" name="notes" class="form-control" rows="3"><%= workout.notes %></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Update Workout</button>
  <a href="/workouts" class="btn btn-secondary ms-2">Cancel</a>
</form>

<%- include('../partials/footer') %>
